{
  "extends": "./tsconfig.base.json",
  "include": [
    "src",
    "test",
    "jest.config.ts",
    "eslint.config.js",
    "tsup.config.ts"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "rootDir": ".",
    "noEmit": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
